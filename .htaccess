<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -l
  RewriteRule ^ - [L]
  RewriteRule ^api/(.*)$ api/route.php?request=$1 [QSA,L]
  RewriteRule ^(.*)/(.*)$ route.php?action=$1&id_comentario=$2 [QSA,L]
  RewriteRule ^(.*)$ route.php?action=$1 [QSA,L]
</IfModule>
